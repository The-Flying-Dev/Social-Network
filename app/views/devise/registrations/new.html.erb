<div class="devise-form">
  

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2>Sign up</h2>

    <!-- custom fields --> 

    <div class="field" id="devise-field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, required: true, class: "devise" %>
    </div>  
    

    <div class="field" id="devise-field">
      <%= f.label :username %><br />
      <%= f.text_field :username, required: true, class: "devise" %>
    </div>

    <!------------------------------------------------------------------>


    <div class="field" id="devise-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise" %>
    </div>

    <div class="field" id="devise-field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "devise" %>
    </div>

    <div class="field" id="devise-field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"btn btn-light" %>
      <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-light" %>      
    </div>

   
  <% end %>

</div>

