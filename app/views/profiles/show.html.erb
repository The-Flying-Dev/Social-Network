<h1>Profiles Page</h1>


<% if @user == current_user %>
  <%= link_to "Edit Profile", edit_profile_path(@user.username), class: "btn btn-default" %> 

<% elsif current_user_is_following(current_user.id, @user.id) %>
  <%= link_to "Unfollow", unfollow_user_path, method: :post, class: "btn btn-success" %>

<% else %> 
  <%= link_to "Follow", follow_user_path, method: :post, class: "btn btn-warning" %>

<% end %>





 <%# will_paginate @posts %>

 <div class="panel panel-default">
  <div class="panel-heading">    
    
  </div>

  <div class="panel-body">
    <p><em></em></p>  

    <%= sanitize @user.username %>
    <%= sanitize @user.bio %>
    <br />
    

    <%= render @posts %>

    
  </div>
</div>