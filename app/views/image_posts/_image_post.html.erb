<%# cache image_post do %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= image_post.title %>
      </h3>
      
    </div>

    <div class="panel-body">
      <p><em>By <%= "#{image_post.user.username}" %> <%# link_to image_post.user.name, image_post.user %></em></p>

      <%= image_tag image_post.url, class: "img-responsive" %>
      <%= sanitize image_post.content %>
      <br />
      <%# pluralize image_posts.cached_comment_count, "Comment" %>
      
      <%= link_to "#{time_ago_in_words image_post.created_at} ago", post_path(image_post) %>
     
      
    </div>
  </div>
<%# end %>

<% if image_post.user == current_user %>
  <%= link_to "Edit Post", edit_image_post_path(image_post), class: "btn btn-default" %>
  <%= link_to "Remove Post", image_post_path(image_post), method: :delete, class: "btn btn-default" %>
<%end %>